<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="320dp"
            android:layout_height="0dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            android:layout_marginBottom="276dp" app:layout_constraintBottom_toTopOf="@+id/text_resultado"/>
    <TextView
            android:text="Saiba a Melhor opção para o abastecimento do seu carro"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginBottom="338dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:layout_marginRight="32dp"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/edit_preco_alcool"
            android:hint="Preço Álcool - Ex: 1.90" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginBottom="279dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.908" android:inputType="numberDecimal"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/edit_preco_gasolina"
            android:hint="Preço Gasolina - Ex: 2.90" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginBottom="224dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0" android:inputType="numberDecimal"/>
    <Button
            android:text="Calcular"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginBottom="162dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"
            android:id="@+id/button_calcular" android:onClick="btCalcular"/>
    <TextView
            android:text="Nenhuma opção escolhida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_resultado" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="48dp" android:layout_marginStart="48dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginBottom="105dp"/>
</android.support.constraint.ConstraintLayout>